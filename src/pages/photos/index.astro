---
import ImageGrid from "../../components/mdx/ImageGrid.astro";
import Base from "../../layouts/Base.astro";

const title = "Photos";
const description = "My Photos";
---

<Base title={title} description={description}>
  <section>
    <h1 class="mb-8 text-2xl font-medium tracking-tight">Photos</h1>
    <ImageGrid columns={3} images={[
        {
          src: "/photos/photo1.jpg",
          alt: "Madrid",
        },
      ]}
    />

    <ImageGrid columns={2} images={[]} />

    <ImageGrid columns={4} images={[]} />
  </section>
</Base>
