{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": false
  },
  "javascript": {
    "formatter": { "quoteStyle": "double", "semicolons": "asNeeded" }
  },
  "json": {
    "formatter": { "trailingCommas": "none" }
  },
  "overrides": [
    {
      "includes": ["**/*.astro"],
      "linter": { "enabled": false },
      "formatter": { "enabled": false }
    },
    {
      "includes": ["dist/**", "build/**", ".astro/**"],
      "linter": { "enabled": false },
      "formatter": { "enabled": false }
    }
  ]
}
